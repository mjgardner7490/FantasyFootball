<h1>@ViewBag.Title</h1>

@model YahooFantasyFootball.ViewModels.WeatherToolVM
<div class="form-horizontal col-md-12" style="display: inline-block">
@using (Html.BeginForm("WeatherTool", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.DropDownListFor(model => model.GameWeekId, Model.GameWeeks, "Select...", new { @class = "input-sm" })
    @Html.DropDownListFor(model => model.TeamId, Model.Managers, "Select...", new { @class = "input-sm" })
    <input class="input-sm" type="submit" value="Submit" />
}
</div>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th class="text-center">Position</th>
            <th class="text-center">Player Name</th>
            <th class="text-center">Team Name</th>
            <th class="text-center">Weather Description</th>
            <th class="text-center">Temperature(F)</th>
            <th class="text-center">Wind Speed (MPH)</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.TeamRoster != null)
        {
            @foreach (var player in Model.TeamRoster)
            {
                <tr>
                    <td>
                        <img class="img-rounded" src="@player.PlayerImageUrl" width="48" height="64" alt="Player Logo" />
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => player.PlayerPosition)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => player.PlayerName)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => player.NflTeam)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => player.gameWeather.description)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => player.gameWeather.temperature)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => player.gameWeather.windSpeed)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

